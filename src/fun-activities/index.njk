<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Tab functionality for root types
    const tabButtons = document.querySelectorAll('.tab-btn');
    const rootContents = document.querySelectorAll('.root-type-content');
    
    // Initialize tabs
    showRootType('taproot');
    
    // Add click event listeners to all tab buttons
    tabButtons.forEach(button => {
      button.addEventListener('click', function() {
        const rootType = this.getAttribute('data-type');
        showRootType(rootType);
      });
    });
    
    function showRootType(rootType) {
      // Hide all content first
      rootContents.forEach(content => {
        content.classList.remove('active');
      });
      
      // Remove active class from all buttons
      tabButtons.forEach(button => {
        button.classList.remove('active');
      });
      
      // Show selected content
      const selectedContent = document.getElementById(rootType);
      if (selectedContent) {
        selectedContent.classList.add('active');
      }
      
      // Activate corresponding button
      const selectedButton = Array.from(tabButtons).find(btn => 
        btn.getAttribute('data-type') === rootType
      );
      
      if (selectedButton) {
        selectedButton.classList.add('active');
      }
    }
    
    // Slider functionality
    const slides = document.querySelectorAll('.care-slide');
    let currentSlide = 0;
    
    // Initialize slider
    if (slides.length > 0) {
      showSlide(currentSlide);
      
      // Add event listeners for slider navigation
      const prevButton = document.querySelector('.prev-btn');
      const nextButton = document.querySelector('.next-btn');
      
      if (prevButton) {
        prevButton.addEventListener('click', function() {
          prevSlide();
        });
      }
      
      if (nextButton) {
        nextButton.addEventListener('click', function() {
          nextSlide();
        });
      }
    }
    
    function showSlide(n) {
      // Hide all slides
      slides.forEach(slide => {
        slide.style.display = 'none';
      });
      
      // Show current slide
      slides[n].style.display = 'block';
    }
    
    function nextSlide() {
      currentSlide++;
      if (currentSlide >= slides.length) {
        currentSlide = 0;
      }
      showSlide(currentSlide);
    }
    
    function prevSlide() {
      currentSlide--;
      if (currentSlide < 0) {
        currentSlide = slides.length - 1;
      }
      showSlide(currentSlide);
    }
    
    // Quiz functionality
    const quizButton = document.querySelector('.quiz-btn');
    if (quizButton) {
      quizButton.addEventListener('click', function() {
        checkAnswers();
      });
    }
    
    function checkAnswers() {
      const correctAnswers = {
        q1: 'b',
        q2: 'c',
        q3: 'c'
      };
      
      let score = 0;
      let feedback = '';
      
      // Check each question
      for (const question in correctAnswers) {
        const selected = document.querySelector(`input[name="${question}"]:checked`);
        
        if (selected) {
          if (selected.value === correctAnswers[question]) {
            score++;
            feedback += `<p>Question ${question.substring(1)}: Correct! 🎉</p>`;
          } else {
            feedback += `<p>Question ${question.substring(1)}: Not quite. Try again! 💪</p>`;
          }
        } else {
          feedback += `<p>Question ${question.substring(1)}: You didn't select an answer. 🤔</p>`;
        }
      }
      
      // Display results
      const resultsElement = document.getElementById('quiz-results');
      if (resultsElement) {
        resultsElement.innerHTML = `
          <h3>Your Score: ${score} out of 3</h3>
          ${feedback}
          ${score === 3 ? '<p>Amazing! You're a root expert! 🌱👑</p>' : '<p>Keep learning about roots!</p>'}
        `;
      }
    }
    
    // Add flipcard functionality
    const flipcards = document.querySelectorAll('.flipcard');
    flipcards.forEach(card => {
      card.addEventListener('click', function() {
        this.querySelector('.flipcard-inner').classList.toggle('flipped');
      });
    });
  });
</script>

